# Application
APP_NAME=nlp-service
APP_ENV=development
LOG_LEVEL=INFO

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3
LLM_TIMEOUT_SECONDS=10
LLM_MAX_RETRIES=2

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=604800
CACHE_ENABLED=true

# Database Configuration (for history)
DATABASE_URL=sqlite:///./nlp_service.db

# Heuristics Configuration
HEURISTIC_CONFIDENCE_THRESHOLD=0.8
USE_LLM_FALLBACK=true

# Time Estimation Defaults
DEFAULT_TIME_MINUTES=10
ACHIEVEMENT_DEFAULT_WEIGHT=10

# Rate Limiting
LLM_RATE_LIMIT_PER_MINUTE=60
LLM_RATE_LIMIT_PER_HOUR=1000

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Security
PII_REDACTION_ENABLED=true
